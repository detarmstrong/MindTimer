<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="12dp">

	<TextView android:text="Duration" android:id="@+id/DurationLabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

    <TextView android:text="00:00" android:id="@+id/Interval2"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/DurationLabel" android:textSize="45sp"></TextView>        

<!--	<EditText android:id="@+id/IntervalEdit" android:layout_below="@id/DurationLabel"-->
<!--		android:layout_width="match_parent" android:layout_height="wrap_content" />-->

	<TextView android:text="Label" android:id="@+id/TextView02"
		android:layout_below="@id/Interval2" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>

	<EditText android:text="" android:id="@+id/LabelEdit" android:layout_below="@id/TextView02"
		android:layout_width="match_parent" android:layout_height="wrap_content"></EditText>

	<ImageButton android:id="@+id/TimerIcon" android:layout_below="@id/LabelEdit"
		android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/button_down" />

	<Button android:text="Take Picture" android:id="@+id/TakePicButton"
		android:layout_toRightOf="@id/TimerIcon" android:layout_below="@id/LabelEdit"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>

	<View android:id="@+id/View01" android:layout_below="@id/TakePicButton"
		android:layout_width="wrap_content" android:layout_height="18dp"></View>

	<Button android:text="Save" android:id="@+id/SaveEdit" android:layout_below="@id/View01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>

	<View android:id="@+id/View02" android:layout_toRightOf="@id/SaveEdit"
		android:layout_width="10dp" android:layout_height="wrap_content"></View>

	<Button android:text="Cancel" android:id="@+id/CancelEdit" android:layout_below="@id/View01"
		android:layout_toRightOf="@id/View02" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></Button>


</RelativeLayout>
