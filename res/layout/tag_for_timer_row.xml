<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timer_row" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal">

    <RadioButton android:id="@+id/selectTimer"
        android:layout_width="wrap_content" android:layout_marginTop="0dp"
        android:layout_height="wrap_content"></RadioButton>

    <TextView android:id="@+id/timerLabel" android:text="Washing Machine 1 (Tagged)"
        android:layout_width="0dp" android:layout_weight="1"
        android:scrollHorizontally="true" android:background="@drawable/box"
        android:layout_height="match_parent" android:padding="3dp"></TextView>

    <ImageButton android:id="@+id/TimerImageButton"
        android:layout_width="50dp" android:layout_height="50dp"
        android:src="@drawable/button_down" />


</LinearLayout>

